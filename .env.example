# Shopify App Configuration
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here
SCOPES=write_products,read_orders,read_products,write_orders

# App URLs
SHOPIFY_APP_URL=https://your-app-domain.com
HOST=0.0.0.0

# Database (Use PostgreSQL for production, SQLite for local dev)
# Local Development (SQLite):
DATABASE_URL=file:./dev.sqlite

# Production (PostgreSQL):
# DATABASE_URL=postgresql://user:password@host:5432/database?schema=public

# Session Secret (Generate with: openssl rand -base64 32)
SESSION_SECRET=your_random_session_secret_here

# Environment
NODE_ENV=development

# Optional: Custom Shop Domain (for testing)
# SHOP_CUSTOM_DOMAIN=your-test-shop.myshopify.com

# Port
PORT=3000

# Sentry (Error Monitoring - Optional)
# SENTRY_DSN=your_sentry_dsn_here

# Billing Configuration (Optional)
# BILLING_REQUIRED=true
